  <ThingDef ParentName="FacialarmorMakeableBase">
    <defName>Apparel_Faceplate</defName>
    <label>Advanced Faceplate</label>
    <description>An advanced tactical faceplate used to keep pawns faces intact, this might stop a bullet..... emphasis on might.</description>
    <techLevel>Industrial</techLevel>
    <tradeability>Sellable</tradeability>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Faceplate</texPath>
      <graphicClass>Graphic_single</graphicClass>
    </graphicData>
    <costStuffCount>30</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costList>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <statBases>
      <MarketValue>120</MarketValue>
      <Mass>1</Mass>
      <WorkToMake>10000</WorkToMake>
      <MaxHitPoints>75</MaxHitPoints>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.01</MoveSpeed>
      <AimingDelayFactor>0.05</AimingDelayFactor>
      <SocialImpact>-0.05</SocialImpact>
    </equippedStatOffsets>
    <generateCommonality>2</generateCommonality>
    <apparel>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Faceplate</wornGraphicPath>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <modExtensions>
      <li Class="JecsTools.ApparelExtension">
        <coverage>
          <li>Eyes</li>
          <li>Teeth</li>
          <li>Mouth</li>
          <li>Nose</li>
        </coverage>
      </li>
    </modExtensions>
  </ThingDef>
